{
  "name": "pivotaly",
  "displayName": "pivotaly",
  "description": "Work seamlessly with pivotal tracker right from vs code",
  "version": "0.2.2",
  "publisher": "brayovsky",
  "repository": {
    "type": "git",
    "url": "https://github.com/brayovsky/pivotaly.git"
  },
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "pivotal tracker",
    "pivotal",
    "agile",
    "project management"
  ],
  "icon": "images/pivotalyIcons/pivotalyIconldpi.png",
  "activationEvents": [
    "*"
  ],
  "main": "./out/pivotaly",
  "contributes": {
    "commands": [
      {
        "command": "pivotaly.startStory",
        "title": "Start story",
        "icon": "images/pivotalyIcons/start/start.svg"
      },
      {
        "command": "pivotaly.stopStory",
        "title": "Stop story",
        "icon": "images/pivotalyIcons/stop/stop.svg"
      },
      {
        "command": "pivotaly.finishStory",
        "title": "Finish story",
        "icon": "images/pivotalyIcons/finish/finish.svg"
      },
      {
        "command": "pivotaly.deliverStory",
        "title": "Deliver story",
        "icon": "images/pivotalyIcons/deliver/deliver.svg"
      },
      {
        "command": "pivotaly.linkStory",
        "title": "Link story",
        "icon": "images/pivotalyIcons/link/link.svg"
      }
    ],
    "configuration": [
      {
        "title": "Pivotaly Configuration",
        "properties": {
          "pivotaly.protectedBranches": {
            "type": "array",
            "title": "Protected branches",
            "description": "Branches that typically are not feature branches",
            "items": {
              "type": "string"
            },
            "default": [
              "master",
              "develop"
            ]
          },
          "pivotaly.branchDelimiter": {
            "type": "string",
            "title": "Branch delimiter",
            "description": "Delimiter within branch to be used to obtain story id e.g in new-branch-2, delimiter is '-'",
            "default": "-"
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pivotaly-info",
          "title": "Pivotaly",
          "icon": "images/pivotalyIcons/pivotaly-mono.svg"
        }
      ]
    },
    "views": {
      "pivotaly-info": [
        {
          "id": "pivotaly.view.membercycle",
          "name": "Member cycle time"
        },
        {
          "id": "pivotaly.view.storyinfo",
          "name": "Story Information"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "pivotaly.linkStory",
          "when": "view == pivotaly.view.storyinfo",
          "group": "navigation@5"
        },
        {
          "command": "pivotaly.startStory",
          "when": "view == pivotaly.view.storyinfo",
          "group": "navigation@1"
        },
        {
          "command": "pivotaly.stopStory",
          "when": "view == pivotaly.view.storyinfo",
          "group": "navigation@2"
        },
        {
          "command": "pivotaly.finishStory",
          "when": "view == pivotaly.view.storyinfo",
          "group": "navigation@3"
        },
        {
          "command": "pivotaly.deliverStory",
          "when": "view == pivotaly.view.storyinfo",
          "group": "navigation@4"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json"
    ]
  },
  "dependencies": {
    "chance": "^1.0.16",
    "coveralls": "^3.0.2",
    "git-emit": "0.0.0",
    "lodash": "4.17.10",
    "restify-clients": "2.4.0",
    "rosie": "^2.0.1",
    "simple-git": "1.96.0",
    "moment": "^2.22.2"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "eslint": "^4.11.0",
    "jest": "^23.5.0",
    "jest-cli": "^23.5.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  }
}
